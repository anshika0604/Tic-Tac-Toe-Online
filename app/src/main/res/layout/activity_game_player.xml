<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".GamePlayerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:weightSum="2" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idTvPlayer1"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="Player 1"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idTvPlayer2"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="Player 2"
            android:textAlignment="center"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp" >

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:id="@+id/idBtnbox1"
            android:onClick="buttonClick"
            android:textSize="25sp"
            android:background="@drawable/custom_button"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/idBtnbox2"
            android:onClick="buttonClick"
            android:textSize="25sp"
            android:background="@drawable/custom_button"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:id="@+id/idBtnbox3"
            android:onClick="buttonClick"
            android:background="@drawable/custom_button"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:id="@+id/idBtnbox4"
            android:onClick="buttonClick"
            android:background="@drawable/custom_button"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/idBtnbox5"
            android:textSize="25sp"
            android:onClick="buttonClick"
            android:background="@drawable/custom_button"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:id="@+id/idBtnbox6"
            android:onClick="buttonClick"
            android:background="@drawable/custom_button"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:id="@+id/idBtnbox7"
            android:textSize="25sp"
            android:onClick="buttonClick"
            android:background="@drawable/custom_button"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/idBtnbox8"
            android:textSize="25sp"
            android:onClick="buttonClick"
            android:background="@drawable/custom_button"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/idBtnbox9"
            android:textSize="25sp"
            android:onClick="buttonClick"
            android:background="@drawable/custom_button"
            />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Button"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/idBtnReset"
        android:background="@drawable/custom_button"/>
</LinearLayout>