<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/image7"
    tools:context=".GamePlayerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:weightSum="2" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idTvPlayer1"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="You"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idTvPlayer2"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="Opponent"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="35dp" >

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:id="@+id/idBtnbox1"
            android:onClick="buttonClick"
            android:textSize="25sp"
            android:background="@drawable/new_custom"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/idBtnbox2"
            android:onClick="buttonClick"
            android:textSize="25sp"
            android:background="@drawable/new_custom"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:id="@+id/idBtnbox3"
            android:onClick="buttonClick"
            android:background="@drawable/new_custom"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp">

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:id="@+id/idBtnbox4"
            android:onClick="buttonClick"
            android:background="@drawable/new_custom"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/idBtnbox5"
            android:textSize="25sp"
            android:onClick="buttonClick"
            android:background="@drawable/new_custom"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:id="@+id/idBtnbox6"
            android:onClick="buttonClick"
            android:background="@drawable/new_custom"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp">

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:id="@+id/idBtnbox7"
            android:textSize="25sp"
            android:onClick="buttonClick"
            android:background="@drawable/new_custom"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/idBtnbox8"
            android:textSize="25sp"
            android:onClick="buttonClick"
            android:background="@drawable/new_custom"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/idBtnbox9"
            android:textSize="25sp"
            android:onClick="buttonClick"
            android:background="@drawable/new_custom"
            />
    </LinearLayout>

    <Button
        android:id="@+id/idBtnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:backgroundTint="#F30303"
        android:text="Reset"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/reset_custom"
        android:textSize="25dp" />
</LinearLayout>